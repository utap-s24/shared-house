<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new purchase"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Linear Layout with TextView and EditText -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Item:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/itemTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter item name"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:inputType="number"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/quantityTextField"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="1000"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who is this shared with?"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Me:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/me_checkbox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Roommate 1:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/roommate_checkbox_one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Roommate 2:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/roommate_checkbox_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layoutFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Roommate 3:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/roommate_checkbox_three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Roommate 4:"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/roommate_checkbox_four"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Button at the bottom -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_marginTop="32dp"/>

</LinearLayout>
